<% if @image.errors.any?  %>
  <div id="error_explanation">
    <div class="alert alert-danger col-md-6 col-md-offset-3">
      The form contains <%= pluralize(@image.errors.count, "error") %>:
      <ul>
        <% @image.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
