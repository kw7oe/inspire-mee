<div class = "row">
<div class = "col-md-6 col-md-offset-3">
	<%= form_for(@image, remote: true, html: { role: "form"}) do |f| %>
	<div id="error_explanation" class="bg-danger text-danger">
	</div>
		<p>
			<%= f.label :link %>	
			<%= f.text_field :link, class: 'form-control' %>
		</p>

		<p>
			<%= f.submit "Add Image", class: 'btn btn-primary' %>
		</p>
	<% end %>
</div>
</div>