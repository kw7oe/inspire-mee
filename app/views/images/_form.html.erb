<div class = "col-md-6 col-md-offset-3">
	<%= form_for @image do |f| %>
		<p>
			<%= f.label :caption %>
			<%= f.text_field :caption, class: 'form-control' %>
		</p>

		<p>
			<%= f.label :link %>	
			<%= f.text_field :link, class: 'form-control' %>
		</p>

		<p>
			<%= f.submit "Add Image", class: 'btn btn-primary' %>
		</p>
	<% end %>
</div>